<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Add your meta tags and CSS links here -->
    <link rel="stylesheet" href="~/css/AdminCustom.css" />
    <style>
        /* Add your existing CSS styles here */

        /* Define the card layout styles */
        .card {
            background-color: #fff; /* Background color for the card */
            border: 1px solid #ccc; /* Border color for the card */
            border-radius: 5px; /* Rounded corners for the card */
            padding: 20px; /* Padding inside the card */
            margin: 10px; /* Margin around the card */
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); /* Card shadow */
        }

      
        /* Define the tab styles */
        .tabs-container {
            display: flex;
            flex-wrap: wrap;
        }

        .tab {
            background-color: #f2f2f2; /* Background color for the tab links */
            border: 1px solid #ccc; /* Border color for the tab links */
            padding: 10px 15px; /* Padding inside the tab links */
            border-radius: 5px; /* Rounded corners for the tab links */
            cursor: pointer; /* Change cursor to pointer on hover */
            margin: 5px; /* Margin around the tab links */
            width: calc(33.33% - 10px); /* Maximum of 3 tabs in each row */
        }

        /* Style for the active tab link */
        .active {
            background-color: limegreen; /* Background color for the active tab link */
            color: #fff; /* Text color for the active tab link */
        }
    </style>
</head>
<body>
     <header>
        <h1>Admin Dashboard</h1>
        <nav>
            <ul>
                <li><a href="/CommonDashboard/LogOut">Logout</a></li>
                <li><a href="#" onclick="goBack()">Back</a></li>
            </ul>
        </nav>
    </header>
    <div class="card">
        <!-- Tab links -->
        <div class="tabs-container">
            <!-- Tab links -->
            <div class="tab active" onclick="openTab('manageUserTab')" id="manageUserTab">Manage Users</div>
            <div class="tab" onclick="openTab('manageFoodTab')" id="manageFoodTab">Manage Foods</div>
            <div class="tab" onclick="openTab('inquiryTab')" id="inquiryTab">Inquiries</div>
            <!-- Add more tabs as needed -->
        </div>
    </div>

    <script>
        // JavaScript function to open tabs
        function openTab(tabName) {
            var tabContents = document.getElementsByClassName("tab-content");
            for (var i = 0; i < tabContents.length; i++) {
                tabContents[i].style.display = "none";
            }

            var tabLinks = document.getElementsByClassName("tab");
            for (var i = 0; i < tabLinks.length; i++) {
                tabLinks[i].classList.remove("active");
            }

            document.getElementById(tabName).style.display = "block";
            document.querySelector("[onclick*='" + tabName + "']").classList.add("active");

            if(tabName=="manageFoodTab"){
                window.location.href = '/Admin/ManageFoodsView';
                return;
            }
            if (tabName == "inquiryTab"){
                window.location.href = '/Admin/InquiryFoodsView';
                return;
            }
        }
        function goBack() {
        window.history.back();
        }
    </script>
</body>
</html>
